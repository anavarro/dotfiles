source ~/.mutt/colors
source ~/.mutt/macros
source ~/.mutt/bindings
source ~/.mutt/aliases
source ~/.mutt/auto_views
source ~/.mutt/subscriptions
source ~/.mutt/account

set alias_file       =~/.mutt/aliases
set mailcap_path     =~/.mutt/mailcap
set header_cache     =~/.mutt/hcache
set message_cachedir =~/.mutt/cache/bodies
set certificate_file =~/.mutt/certificates
set signature        =~/.mutt/signature

# Contats
set sort_alias    = alias
set reverse_alias = yes

# Organizing
set noconfirmappend

# Composing
set charset="utf-8"
set config_charset="utf-8"
set assumed_charset="utf-8:iso-8859-15:us-ascii"

set allow_8bit=no
set allow_ansi=yes
set text_flowed=yes
set fcc_attach
set attribution="%d,Â %n wrote:"
set use_from= yes
set include=yes
set move=no
set delete=yes
set editor="vim +':set textwidth=77' +':set wrap' +\`awk '/^$/ {print i+2; exit} {i++}' %s\` %s"
set date_format="%A, %d.%m.%y at %H:%M"
set edit_headers
set abort_nosubject=no
set abort_unmodified=no
set bounce_delivered=no
set metoo=no
set reply_self=no
set followup_to=yes
set envelope_from  = yes
set fast_reply=yes
set indent_string="> "

# Fordwarding
set forward_format = "Fwd: %s"
set forward_quote
set mime_forward=no
set mime_forward_rest=yes
set forward_decode=yes
set nopipe_decode

# Pager
set pager_index_lines = 10
set pager_context     = 10
set pager_stop=yes
set markers=no
#set implicit_autoview=yes
set tilde
set score=no

# Look and Feel
set menu_scroll
set smart_wrap
set mark_old = no
set nobeep
set auto_tag
set sort_alias=alias
set status_on_top

set sort     = 'threads'
set sort_aux = 'last-date-received'
set strict_threads

set wait_key=no
set write_inc=25
set sleep_time=0
set folder_format="%2C %t%N %f %> %8s %d "
set index_format="%4C %Z %[!%b %d %Y] %-17.17F (%3l) %s"

alternative_order text/plain text text/enriched text/html

ignore *
unignore  from: to: cc: date: subject: user-agent: x-mailer:
hdr_order from: to: cc: date: subject: user-agent: x-mailer:

mailboxes `echo -n "+ "; find ~/Mail -maxdepth 1 -type d -name "*" -printf "+'%f' "`

